<%- include('../header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/subcategoryCreateApi" method="post"  class="col-md-8">
            <div class="mb-3">
                <label for="title" class="form-label"> Category</label>
                <select name="categoryId" id="">
                    <option value="">--Category--</option>
                    <% category.map((val)=>{ %> 
                        <option value="<%= val.id %>"><%= val.category %></option>
                    <%  }) %>
                </select>
              
            </div>

            <div class="mb-3">
                <label for="title" class="form-label"> Sub-Category</label>
                <input type="text" id="category" name="subcategory" class="form-control">
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    function previewsubcat_image(input) {
        const preview = document.getElementById('subcat_imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
